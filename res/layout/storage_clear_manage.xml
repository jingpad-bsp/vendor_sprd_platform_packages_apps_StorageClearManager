<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_20"
        android:paddingEnd="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_8"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/storage_warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/storage_warning"
            android:layout_width="match_parent"
            android:minHeight="@dimen/dimen_72"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_24"
            android:textDirection="locale"
            android:gravity="center_vertical"
            android:textSize="@dimen/warning_font_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/divider_color"/>

    <TextView
        android:id="@+id/category_garbage_clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:layout_marginStart="@dimen/dimen_20"
        android:gravity="center_vertical"
        android:textDirection="locale"
        android:text="@string/garbage_file"
        android:textSize="@dimen/category_font_size"
        android:textColor="@color/category_color"
        android:drawableStart="@drawable/baseline_useless_file_24px"
        android:drawablePadding="@dimen/dimen_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_60"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/garbage_size_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimen_56"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/garbage_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:textSize="@dimen/size_font"
                android:textColor="@color/category_color"/>
            <TextView
                android:id="@+id/garbage_size_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="locale"
                android:layout_marginStart="@dimen/dimen_5"
                android:textSize="@dimen/size_unit_font"
                android:textColor="@color/small_font_color" />
        </LinearLayout>
        <TextView
            android:id="@+id/scan_path"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24"
            android:gravity="center_vertical"
            android:textDirection="locale"
            android:text="@string/file_scanning"
            android:textSize="@dimen/warning_font_size"
            android:textColor="@color/small_font_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_72"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <Button
                android:id="@+id/garbage_clear_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_42"
                android:background="@drawable/garbage_clear_btn"
                android:text="@string/clear_storage_button"
                android:visibility="visible"
                android:textColor="@color/garbage_clear_btn_color"
                android:textSize="@dimen/button_font_size"/>
            <ImageView
                android:id="@+id/clear_done"
                android:layout_width="@dimen/dimen_42"
                android:layout_height="@dimen/dimen_42"
                android:visibility="gone"
                android:src="@drawable/baseline_done_42"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/divider_color"/>
    <RelativeLayout
        android:id="@+id/app_clear_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:paddingStart="@dimen/dimen_20"
        android:paddingEnd="@dimen/dimen_20"
        android:background="@drawable/button_drawable">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/application_clear_title"
            android:drawableStart="@drawable/baseline_folder_24px"
            android:textAllCaps="false"
            android:textDirection="locale"
            android:drawablePadding="@dimen/dimen_24"
            android:gravity="center_vertical"
            android:textSize="@dimen/category_font_size"
            android:textColor="@color/category_color"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_right_24px"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/divider_color"/>
</LinearLayout>
